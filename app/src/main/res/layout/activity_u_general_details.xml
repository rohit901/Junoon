<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".uGeneralDetailsActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/genDetailsTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Update General Details"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/updatenameEditText"
                android:layout_alignStart="@+id/updatenameEditText"
                android:layout_marginBottom="-48dp"
                android:text="Student Name:"
                android:textColor="#5E35B1" />

            <EditText
                android:id="@+id/updatenameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"
                android:ems="10"
                android:inputType="textPersonName" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/updateclassEditText"
                android:layout_alignStart="@+id/updateclassEditText"
                android:layout_marginBottom="-48dp"
                android:text="Class:"
                android:textColor="#5E35B1" />

            <EditText
                android:id="@+id/updateclassEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"
                android:ems="10"
                android:inputType="textPersonName" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/schoolTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/updateschoolEditText"
                android:layout_alignStart="@+id/updateschoolEditText"
                android:layout_marginBottom="-48dp"
                android:text="School:"
                android:textColor="#5E35B1" />

            <EditText
                android:id="@+id/updateschoolEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"
                android:ems="10"
                android:inputType="textPersonName" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/phoneTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/updatephoneEditText"
                android:layout_alignStart="@+id/updatephoneEditText"
                android:layout_marginBottom="-48dp"
                android:text="Fees Installment 1:"
                android:textColor="#5E35B1" />

            <EditText
                android:id="@+id/updatephoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"
                android:ems="10"
                android:inputType="number" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/FeeInstall2Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/updatefeeinst2EditText"
                android:layout_alignStart="@+id/updatefeeinst2EditText"
                android:layout_marginBottom="-48dp"
                android:text="Fees Installment 2:"
                android:textColor="#5E35B1" />

            <EditText
                android:id="@+id/updatefeeinst2EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"
                android:ems="10"
                android:inputType="number" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/FeeInstall3Tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/updatefeeinst3EditText"
                android:layout_alignStart="@+id/updatefeeinst3EditText"
                android:layout_marginBottom="-48dp"
                android:text="Fees Installment 3:"
                android:textColor="#5E35B1" />

            <EditText
                android:id="@+id/updatefeeinst3EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"
                android:ems="10"
                android:inputType="number" />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/phonenumTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/updatephonenumEditText"
                android:layout_alignStart="@+id/updatephonenumEditText"
                android:layout_marginBottom="-48dp"
                android:text="Phone No:"
                android:textColor="#5E35B1" />

            <EditText
                android:id="@+id/updatephonenumEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"
                android:ems="10"
                android:inputType="phone" />



        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/addressTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/updateaddressEditText"
                android:layout_alignStart="@+id/updateaddressEditText"
                android:layout_marginBottom="-48dp"
                android:text="Address:"
                android:textColor="#5E35B1" />

            <EditText
                android:id="@+id/updateaddressEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"
                android:ems="10"
                android:inputType="textPostalAddress" />



        </RelativeLayout>


        <Button
            android:id="@+id/updatenextBtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:text="Next" />




    </LinearLayout>
</ScrollView>