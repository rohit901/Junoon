<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/genDetailsTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="General Details"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/unameEditText"
            android:layout_alignStart="@+id/unameEditText"
            android:layout_marginBottom="-48dp"
            android:text="Student Name:"
            android:textColor="#5E35B1" />

        <EditText
            android:id="@+id/unameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:inputType="textPersonName" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/uclassEditText"
            android:layout_alignStart="@+id/uclassEditText"
            android:layout_marginBottom="-48dp"
            android:text="Class:"
            android:textColor="#5E35B1" />

        <EditText
            android:id="@+id/uclassEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:inputType="textPersonName" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/schoolTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/uschoolEditText"
            android:layout_alignStart="@+id/uschoolEditText"
            android:layout_marginBottom="-48dp"
            android:text="School:"
            android:textColor="#5E35B1" />

        <EditText
            android:id="@+id/uschoolEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:inputType="textPersonName" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/phoneTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/uphoneEditText"
            android:layout_alignStart="@+id/uphoneEditText"
            android:layout_marginBottom="-48dp"
            android:text="Fees Installment 1:"
            android:textColor="#5E35B1" />

        <EditText
            android:id="@+id/uphoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:inputType="number" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/FeeInstall2Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/feeinst2EditText"
            android:layout_alignStart="@+id/feeinst2EditText"
            android:layout_marginBottom="-48dp"
            android:text="Fees Installment 2:"
            android:textColor="#5E35B1" />

        <EditText
            android:id="@+id/feeinst2EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:inputType="number" />



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/FeeInstall3Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/feeinst3EditText"
            android:layout_alignStart="@+id/feeinst3EditText"
            android:layout_marginBottom="-48dp"
            android:text="Fees Installment 3:"
            android:textColor="#5E35B1" />

        <EditText
            android:id="@+id/feeinst3EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:inputType="number" />



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/phonenumTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/phonenumEditText"
            android:layout_alignStart="@+id/phonenumEditText"
            android:layout_marginBottom="-48dp"
            android:text="Phone No:"
            android:textColor="#5E35B1" />

        <EditText
            android:id="@+id/phonenumEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:inputType="phone" />



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/addressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/addressEditText"
            android:layout_alignStart="@+id/addressEditText"
            android:layout_marginBottom="-48dp"
            android:text="Address:"
            android:textColor="#5E35B1" />

        <EditText
            android:id="@+id/addressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="48dp"
            android:ems="10"
            android:inputType="textPostalAddress" />



    </RelativeLayout>


    <Button
        android:id="@+id/nextBtn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="30dp"
        android:text="Next" />




</LinearLayout>
</ScrollView>